<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#3A3D3A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tutorialText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageBox"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="140dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:layout_weight="1"
            android:cropToPadding="false"
            android:src="@drawable/box"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="140dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:layout_weight="1"
            android:cropToPadding="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imagePlane"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="140dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:layout_weight="1"
            android:cropToPadding="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageDog"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="140dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:layout_weight="1"
            android:cropToPadding="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tutorialText"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="-5dp"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="100dp"
        android:fontFamily="casual"
        android:text="Avoid the enemies!"
        android:textAlignment="center"
        android:textSize="36sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageButton
        android:id="@+id/right_arrow_button"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom|right"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/right_arrow_button"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/left_arrow_button"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="1dp" />

    <ImageButton
        android:id="@+id/left_arrow_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|left"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/left_arrow_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>